<li id="<%= task.id%>">
          <%= task.title  %>
          <% unless task.deadline.nil? %>
            , to read: <%= task.deadline.strftime('%D')  %>
          <% end %>
          <%= link_to "supprimer", task_path(task.id), method: :delete, remote: true%>
          <%= render "tasks/task_checkbox", task: task%>
</li>